<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorwhite"
    android:orientation="vertical"
    tools:context=".home_activity">

    <TextView
        android:id="@+id/wel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/colorwhite"
        android:fontFamily=""
        android:gravity="center"
        android:text="Welcome!"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wel"
        android:backgroundTint="@color/colorwhite"
        android:fontFamily=""
        android:gravity="center"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/name_p"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/step"
            android:layout_marginTop="12dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/step_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textColor="@color/green"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000"
            android:paddingHorizontal="20dp"
            android:textColor="@color/green"
            android:layout_marginTop="50dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="/"
            android:paddingHorizontal="70dp"
            android:textColor="@color/green"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target"
            android:textSize="18dp"
            android:textColor="@color/green"
            android:layout_marginTop="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            />

        <TextView
            android:id="@+id/comp_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:paddingHorizontal="20dp"
            android:text="Target not completed"
            android:textSize="10dp"
            android:textColor="@color/green"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/name_p"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="30dp">


        <TextView
            android:id="@+id/bmi_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textSize="18dp"
            android:gravity="start"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/bmiCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="BMICOUNT"
            android:textColor="@color/green"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:id="@+id/norms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/obese_class_iii"
            android:textColor="@color/green"
            android:textSize="10sp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>






    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        app:cardCornerRadius="30dp">


        <TextView
            android:id="@+id/streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="start"
            android:paddingTop="10dp"
            android:text="STREAKS"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/st_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="35dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/green" />


    </android.support.v7.widget.CardView>

</RelativeLayout>